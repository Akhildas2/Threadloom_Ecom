<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Product Image</th>
                <th>product Name</th>
                <th>Price </th>
                <th>Quantity</th>
                <th>Order Status</th>
                <th>Order Date</th>
                <th>Actions</th>

            </tr>
        </thead>
        <% orders.forEach(order=> { %>
            <tbody>

                <% order.items.forEach(item=> { %>
                    <tr>

                        <td>
                            <a
                                href="/order/orderDeatil/<%= order._id %>?productId=<%=  item.productId._id %>">
                                <img src="/uploads/product/resized/<%= item.productId.productImage[0] %>"
                                    style="width: 150px;height: 100px;"
                                    alt="<%= item.productId.name %>">
                                <p>
                                    <%= order.ordersId %>
                                </p>

                            </a>

                        </td>

                        <td>
                            <a
                                href="/order/orderDeatil/<%= order._id %>?productId=<%=  item.productId._id %>">

                                <p>
                                    <%= item.productId.name
                                        %>
                                </p>
                            </a>

                        </td>

                        <td>â‚¹<%= item.price.toFixed(2)%>
                        </td>
                        <td>
                            <%= item.quantity %>
                        </td>
                        <td>
                            <%= item.orderStatus %>
                        </td>
                        <td>
                            <%= order.date.toDateString() %>
                        </td>


                        <td><a href="/order/orderDeatil/<%= order._id %>?productId=<%=  item.productId._id %>"
                                class="btn-small d-block">View</a>
                        </td>
                    </tr>
                    <% }); %>
                        <% }); %>
            </tbody>
    </table>
</div>  







