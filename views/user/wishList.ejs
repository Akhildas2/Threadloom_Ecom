<%- include('../layouts/header.ejs') %>
    <%- include('../layouts/navbar.ejs') %>

        <style>
            .wishlist-container {
                margin-top: 20px;
                padding: 20px;
            }

            .wishlist-message {
                font-size: 1.5rem;
                font-weight: 500;
                color: #333;
                text-align: center;
            }

            .wishlist-img {
                max-width: 100%;
                height: auto;
            }
        </style>
        <main class="main">
            <div class="page-header breadcrumb-wrap">
                <div class="container">
                    <div class="breadcrumb">
                        <a href="/" rel="nofollow">Home</a>
                        <span></span> Wishlist
                    </div>
                </div>
            </div>
            <section class="mt-50 mb-50">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <% if (!req.session.user_id) { %>
                                <!-- Show message to login -->
                                <div class="alert alert-warning" role="alert">
                                    Please <a href="/login">login</a> to view your wishlist.
                                </div>
                                <% } else if (wishlist.length===0) { %>
                                    <div class="container">
                                        <div class="wishlist-container">
                                            <div class="row align-items-center">
                                                <div
                                                    class="col-lg-6 col-md-6 col-sm-12 d-flex align-items-center justify-content-center">
                                                    <img src="/imgs/pages/Wish List Page.png" alt="Wishlist Image"
                                                        class="wishlist-img">
                                                </div>
                                                <div
                                                    class="col-lg-6 col-md-6 col-sm-12 d-flex align-items-center justify-content-center">
                                                    <div class="alert alert-info wishlist-message" role="alert">
                                                        Hi buddy, your wishlist is empty. Please add some items to your
                                                        wishlist.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <% } else { %>
                                        <div class="table-responsive">
                                            <table class="table shopping-summery text-center">
                                                <thead>
                                                    <tr class="main-heading">
                                                        <th scope="col" colspan="2">Product</th>
                                                        <th scope="col">Price</th>
                                                        <th scope="col">Stock Status</th>
                                                        <th scope="col">Add To Cart</th>
                                                        <th scope="col">Remove</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% wishlist.forEach(items=> { %>

                                                        <tr>
                                                            <td class="image product-thumbnail">
                                                                <a href="/productdetails/<%= items.productId._id %>">
                                                                    <img src="/uploads/product/resized/<%= items.productId.productImage[0] %>"
                                                                        alt="#">
                                                                </a>
                                                            </td>
                                                            <td class="product-des product-name">
                                                                <a href="/productdetails/<%= items.productId._id %>">
                                                                    <h5 class="product-name">
                                                                        <%= items.productId.name %>
                                                                    </h5>
                                                                </a>
                                                            </td>
                                                            <td class="price" data-title="Price"><span>â‚¹<%=
                                                                        items.productId.price%></span>
                                                            </td>
                                                            <% if (!items.productId.stockCount<=0) { %>
                                                                <td class="text-center" data-title="Stock">
                                                                    <span class="color3 font-weight-bold">In
                                                                        Stock</span>
                                                                </td>

                                                                <% } else { %>
                                                                    <td class="text-center" data-title="Stock">
                                                                        <span class="font-weight-bold"
                                                                            style="color: red;">Out Of Stock</span>
                                                                    </td>

                                                                    <% } %>
                                                                        <td>
                                                                            <button aria-label="Add To Cart"
                                                                                style="background-color:#088178 ;"
                                                                                onclick="addToCart('<%= items.productId._id %>', '<%= items.productId.name %>', '<%= items.productId.price %>')">
                                                                                <i class="fi-rs-shopping-bag-add"></i>
                                                                            </button>
                                                                        </td>

                                                                        <td class="action" data-title="Remove">
                                                                            <a href="#"
                                                                                onclick="removeFromCart('<%= items.productId._id %>')"><i
                                                                                    class="fi-rs-trash"></i></a>
                                                                        </td>
                                                        </tr>
                                                        <% }); %>
                                                            <tr>

                                                                <td colspan="6" class="text-end">
                                                                    <a href="#" onclick="clearCartConfirmation()"
                                                                        class="text-muted"> <i
                                                                            class="fi-rs-cross-small"></i> Clear
                                                                        Cart</a>
                                                                </td>

                                                            </tr>
                                                </tbody>
                                            </table>
                                        </div>
                        </div>
                        <% } %>

                    </div>
                </div>
            </section>
        </main>

        <%- include('../layouts/footer.ejs') %>
            <%- include('../layouts/preloader.ejs') %>
                <%- include('../layouts/script.ejs') %>

                    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                    <script>
                        function removeFromCart(id) {
                            Swal.fire({
                                title: 'Are you sure?',
                                text: "You won't be able to revert this!",
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Yes, delete it!'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    fetch(`/wishList/removeFromWishList/${id}`, {
                                        method: 'DELETE',
                                    })
                                        .then(response => response.json())
                                        .then(data => {
                                            if (data.status) {
                                                const Toast = Swal.mixin({
                                                    toast: true,
                                                    position: "top-end",
                                                    showConfirmButton: false,
                                                    timer: 3000,
                                                    timerProgressBar: true,
                                                    didOpen: (toast) => {
                                                        toast.onmouseenter = Swal.stopTimer;
                                                        toast.onmouseleave = Swal.resumeTimer;
                                                    }
                                                });
                                                Toast.fire({
                                                    title: 'Deleted!',
                                                    text: 'Your item has been removed from the wishlist.',
                                                    icon: 'success',
                                                });

                                                setTimeout(() => {
                                                    location.reload();
                                                }, 3000);
                                            } else {
                                                Swal.fire(
                                                    'Failed!',
                                                    'Failed to remove item from wishlist.',
                                                    'error'
                                                );
                                            }
                                        })
                                        .catch(error => {
                                            console.error('Error:', error);
                                            Swal.fire(
                                                'Failed!',
                                                'Failed to remove item from wishlist.',
                                                'error'
                                            );
                                        });
                                }
                            });
                        }




                        function clearCartConfirmation() {
                            Swal.fire({
                                title: 'Are you sure?',
                                text: "You won't be able to revert this!",
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Yes, clear it!'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    fetch('/wishList/clear', {
                                        method: 'DELETE',
                                        headers: {
                                            'Content-Type': 'application/json',
                                        },
                                    })
                                        .then(response => response.json())
                                        .then(data => {
                                            if (data.status) {
                                                Swal.fire(
                                                    {
                                                        title: 'Cleared!',
                                                        text: 'Your wishlist has been cleared.',
                                                        icon: 'success',
                                                        timer: 3000,
                                                        timerProgressBar: true,
                                                        showConfirmButton: false,
                                                    }
                                                );
                                                setTimeout(() => {
                                                    location.reload();
                                                }, 3000);
                                            } else {
                                                Swal.fire(
                                                    'Failed!',
                                                    'Failed to clear the wishlist.',
                                                    'error'
                                                );
                                            }
                                        })
                                        .catch(error => {
                                            console.error('Error:', error);
                                            Swal.fire(
                                                'Failed!',
                                                'Failed to clear the wishlist.',
                                                'error'
                                            );
                                        });
                                }
                            });
                        }

                        function addToCart(productId, name, price) {
                            // Assuming you want to add 1 quantity by default
                            const quantity = 1;

                            fetch('/cart/addToCart/' + productId, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                },
                                body: JSON.stringify({ productId, name, quantity, price }),
                            })
                                .then(response => {
                                    if (response.redirected) {
                                        return Swal.fire({
                                            title: 'Login Required',
                                            text: 'You must be logged in to add items to your cart.',
                                            icon: 'warning',
                                            showCancelButton: true,
                                            confirmButtonText: 'Login',
                                            cancelButtonText: 'Cancel',
                                        }).then((result) => {
                                            if (result.isConfirmed) {
                                                window.location.href = '/login';
                                            } else {
                                                throw new Error('Action cancelled');
                                            }
                                        });
                                    }
                                    return response.json();
                                })

                                .then(data => {
                                    if (data.status) {
                                        // Show a success message using SweetAlert2
                                        const Toast = Swal.mixin({
                                            toast: true,
                                            position: "top-end",
                                            showConfirmButton: false,
                                            timer: 3000,
                                            timerProgressBar: true,
                                            didOpen: (toast) => {
                                                toast.onmouseenter = Swal.stopTimer;
                                                toast.onmouseleave = Swal.resumeTimer;
                                            }
                                        });
                                        Toast.fire({
                                            icon: "success",
                                            title: 'Success!',
                                            text: data.message,
                                        });
                                    } else {
                                        // Handle errors
                                        Swal.fire({
                                            title: 'Error!',
                                            text: data.message,
                                            icon: 'error',
                                        });
                                    }
                                })
                                .catch(err => {
                                    if (!err.data.success) {
                                        Swal.fire({
                                            icon: 'error',
                                            title: 'Error',
                                            text: err.response.data.message,
                                        });
                                    } else {
                                        console.error(err);
                                    }
                                });
                        }


                    </script>