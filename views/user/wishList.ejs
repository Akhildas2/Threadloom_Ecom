<%- include('../layouts/header.ejs') %>
    <%- include('../layouts/navbar.ejs') %>

        <style>
            .wishlist-container {
                margin: 40px 0;
                padding: 30px;
                background: #ffffff;
                border-radius: 15px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            }

            .wishlist-message {
                font-size: 1.5rem;
                font-weight: 600;
                color: #2d2d2d;
                padding: 30px;
                background: #f8f9fa;
                border-radius: 12px;
                border-left: 4px solid #088178;
            }

            .wishlist-message a {
                color: #088178;
                transition: all 0.3s ease;
                position: relative;
            }

            .wishlist-message a:hover:after {
                content: 'â†’';
                margin-left: 5px;
            }

            .wishlist-img {
                max-width: 80%;
                height: auto;
                transition: transform 0.3s ease;
            }

            .wishlist-img:hover {
                transform: scale(1.05);
            }

            .table-responsive {
                overflow: hidden;
            }

            .shopping-summery {
                width: 100%;
                background: #fff;
                border-radius: 10px;
            }

            .shopping-summery th {
                padding: 12px;
                font-size: 1rem;
            }

            .shopping-summery td {
                padding: 10px;
                font-size: 0.95rem;
            }

            .shopping-summery tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .shopping-summery tbody tr:hover {
                background: #eef7f6;
            }

            .money {
                font-weight: 600;
                color: #333;
            }

            .discounted-price {
                color: green;
                font-size: 1.1rem;
                font-weight: 700;
            }

            .discounted-percentage {
                font-size: 0.9rem;
                font-weight: 500;
            }

            button[aria-label="Add To Cart"] {
                background-color: #088178;
                border: none;
                padding: 8px 12px;
                border-radius: 8px;
                transition: 0.3s ease-in-out;
                color: white;
                font-size: 1rem;
            }

            button[aria-label="Add To Cart"]:hover {
                background-color: #066c62;
            }

            .action a {
                color: red;
                font-size: 1.2rem;
                transition: 0.3s;
            }

            .action a:hover {
                color: darkred;
                transform: scale(1.1);
            }

            .text-end a {
                color: #088178 !important;
                font-weight: 600;
                transition: color 0.3s ease-in-out;
            }

            .text-end a:hover {
                color: #066c62 !important;
                text-decoration: underline;
            }

            @media (max-width: 480px) {

                .wishlist-container,
                .table-responsive,
                .wishlist-title,
                .wishlist-message {
                    text-align: center;
                }

                .wishlist-container .row {
                    flex-direction: column;
                    align-items: center;
                }

                .shopping-summery thead {
                    display: none;
                }

                .shopping-summery tbody,
                .shopping-summery tr {
                    display: block;
                    width: 100%;
                }

                .shopping-summery tr {
                    margin-bottom: 15px;
                    border: 1px solid #ddd;
                    border-radius: 10px;
                    padding: 10px;
                    background: #fff;
                }

                .shopping-summery td {
                    display: flex;
                    justify-content: space-between;
                    padding: 8px;
                    font-size: 1rem;
                    text-align: center;
                    border: none;
                }

                .shopping-summery td::before {
                    content: attr(data-title) "";
                    font-weight: 600;
                    flex: 1;
                    text-align: left;
                }

                .shopping-summery .image {
                    display: flex;
                    justify-content: center;
                }

                .shopping-summery .image img {
                    max-width: 80px;
                    height: auto;
                    border-radius: 5px;
                }

                .shopping-summery .action,
                .shopping-summery .text-end {
                    text-align: center;
                }

                .pagination-area {
                    display: flex;
                    justify-content: center;
                }
            }
        </style>

        <main class="main">
            <div class="page-header breadcrumb-wrap">
                <div class="container">
                    <div class="breadcrumb">
                        <a href="/" rel="nofollow">Home</a>
                        <span></span> Wishlist
                    </div>
                </div>
            </div>
            <section class="mt-50 mb-50">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <% if (!req.session.user_id) { %>
                                <!-- Show message to login -->
                                <div class="alert alert-warning" role="alert">
                                    Please <a href="/login">login</a> to view your wishlist.
                                </div>
                                <% } else if (wishlist.length===0) { %>
                                    <div class="container">
                                        <div class="wishlist-container">
                                            <div class="row align-items-center">
                                                <div
                                                    class="col-lg-6 col-md-6 col-sm-12 d-flex align-items-center justify-content-center">
                                                    <img src="/imgs/pages/Wish List Page.png" alt="Wishlist Image"
                                                        class="wishlist-img">
                                                </div>
                                                <div
                                                    class="col-lg-6 col-md-6 col-sm-12 d-flex align-items-center justify-content-center">
                                                    <div class="alert alert-info wishlist-message" role="alert">
                                                        Hey buddy, your wishlist is currently empty. Start adding your favorite items by visiting the <a href='/shop'>shopping page</a>.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <% } else { %>
                                        <h3 class="wishlist-title text-center">
                                            <i class="fi-rs-heart" style="color: #088178;"></i>
                                            My Wishlist <span class="wishlist-count">(<%= totalCount %>)</span>
                                        </h3>
                                        <div class="table-responsive mt-30">
                                            <table class="table shopping-summery text-center">
                                                <thead>
                                                    <tr class="main-heading">
                                                        <th scope="col" colspan="2">Product</th>
                                                        <th scope="col">Price</th>
                                                        <th scope="col">Stock Status</th>
                                                        <th scope="col">Add To Cart</th>
                                                        <th scope="col">Remove</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% wishlist.forEach(items=> { %>

                                                        <tr>
                                                            <td class="image product-thumbnail">
                                                                <a href="/productdetails/<%= items.productId._id %>">
                                                                    <img src="/uploads/product/resized/<%= items.productId.productImage[0] %>"
                                                                        alt="#">
                                                                </a>
                                                            </td>
                                                            <td class="product-des product-name">
                                                                <a href="/productdetails/<%= items.productId._id %>">
                                                                    <h5 class="product-name">
                                                                        <%= items.productId.name %>
                                                                    </h5>
                                                                </a>
                                                            </td>
                                                            <td class="price" data-title="Price">
                                                                <% let discountedPrice=items.productId.price; %>
                                                                    <% let hasDiscount=false; %>
                                                                        <% let discountPercentage=0; %>

                                                                            <% if (items.productId.offer && new Date()
                                                                                <=new
                                                                                Date(items.productId.offer.endingDate))
                                                                                { %>
                                                                                <% discountPercentage=items.productId.offer.discount;
                                                                                    %>
                                                                                    <% hasDiscount=true; %>
                                                                                        <% } %>

                                                                                            <% if
                                                                                                (items.productId.category.offer
                                                                                                && new Date() <=new
                                                                                                Date(items.productId.category.offer.endingDate))
                                                                                                { %>
                                                                                                <% if
                                                                                                    (items.productId.category.offer.discount>
                                                                                                    discountPercentage)
                                                                                                    { %>
                                                                                                    <% discountPercentage=items.productId.category.offer.discount;
                                                                                                        %>
                                                                                                        <% hasDiscount=true;
                                                                                                            %>
                                                                                                            <% } %>
                                                                                                                <% } %>

                                                                                                                    <% if
                                                                                                                        (hasDiscount)
                                                                                                                        {
                                                                                                                        %>
                                                                                                                        <% discountedPrice
                                                                                                                            -=discountedPrice
                                                                                                                            *
                                                                                                                            (discountPercentage
                                                                                                                            /
                                                                                                                            100);
                                                                                                                            %>
                                                                                                                            <span
                                                                                                                                class="money price">
                                                                                                                                <del>â‚¹
                                                                                                                                    <%= items.productId.price.toFixed(2)
                                                                                                                                        %>
                                                                                                                                </del>
                                                                                                                                &nbsp;<span
                                                                                                                                    class="discounted-price"
                                                                                                                                    style="color: green;">â‚¹
                                                                                                                                    <%= discountedPrice.toFixed(2)
                                                                                                                                        %>
                                                                                                                                </span>
                                                                                                                                &nbsp;<span
                                                                                                                                    class="discounted-percentage"
                                                                                                                                    style="color: red;">(
                                                                                                                                    <%= discountPercentage
                                                                                                                                        %>
                                                                                                                                        %
                                                                                                                                        off)
                                                                                                                                </span>
                                                                                                                            </span>
                                                                                                                            <% } else
                                                                                                                                {
                                                                                                                                %>
                                                                                                                                <span
                                                                                                                                    class="money price">â‚¹
                                                                                                                                    <%= items.productId.price.toFixed(2)
                                                                                                                                        %>
                                                                                                                                </span>
                                                                                                                                <% }
                                                                                                                                    %>
                                                            </td>
                                                            <% if (items.productId.stockCount> 0) { %>
                                                                <td class="text-center" data-title="Stock">
                                                                    <span class="badge bg-success p-2">In Stock</span>
                                                                </td>
                                                                <% } else { %>
                                                                    <td class="text-center" data-title="Stock">
                                                                        <span class="badge bg-danger p-2">Out Of
                                                                            Stock</span>
                                                                    </td>
                                                                    <% } %>

                                                                        <td>
                                                                            <button aria-label="Add To Cart"
                                                                                style="background-color:#088178 ;"
                                                                                onclick="addToCart('<%= items.productId._id %>', '<%= items.productId.name %>', '<%= items.productId.price %>')">
                                                                                <i class="fi-rs-shopping-bag-add"></i>
                                                                            </button>
                                                                        </td>

                                                                        <td class="action" data-title="Remove">
                                                                            <a href="#"
                                                                                onclick="removeFromCart('<%= items.productId._id %>')"><i
                                                                                    class="fi-rs-trash"></i></a>
                                                                        </td>
                                                        </tr>
                                                        <% }); %>
                                                            <tr>

                                                                <td colspan="6" class="text-end">
                                                                    <a href="#" onclick="clearCartConfirmation()"
                                                                        class="text-muted"> <i
                                                                            class="fi-rs-cross-small"></i> Clear
                                                                        Cart</a>
                                                                </td>

                                                            </tr>
                                                </tbody>
                                            </table>
                                        </div>
                        </div>
                        <% } %>

                    </div>
                </div>

                <!-- Pagination -->
                <div class="pagination-area mt-30 mb-50">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <% if (wishlistCurrentPage> 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?wishlistPage=<%= wishlistCurrentPage - 1 %>#wishlist">
                                        <span aria-hidden="true">&lt;</span>
                                    </a>
                                </li>
                                <% } %>
                                    <% for (let i=1; i <=wishlistTotalPages; i++) { %>
                                        <% if (i===wishlistCurrentPage) { %>
                                            <li class="page-item active">
                                                <a class="page-link" href="#wishlist">
                                                    <%= i %>
                                                </a>
                                            </li>
                                            <% } else { %>
                                                <li class="page-item">
                                                    <a class="page-link" href="?wishlistPage=<%= i %>#wishlist">
                                                        <%= i %>
                                                    </a>
                                                </li>
                                                <% } %>
                                                    <% } %>
                                                        <% if (wishlistCurrentPage < wishlistTotalPages) { %>
                                                            <li class="page-item">
                                                                <a class="page-link"
                                                                    href="?wishlistPage=<%= wishlistCurrentPage + 1 %>#wishlist">
                                                                    <span aria-hidden="true">&gt;</span>
                                                                </a>
                                                            </li>
                                                            <% } %>
                        </ul>
                    </nav>
                </div>

            </section>

        </main>

        <%- include('../layouts/footer.ejs') %>
            <%- include('../layouts/preloader.ejs') %>
                <%- include('../layouts/script.ejs') %>

                    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                    <script>
                        function removeFromCart(id) {
                            Swal.fire({
                                title: 'Are you sure?',
                                text: "You won't be able to revert this!",
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Yes, delete it!'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    fetch(`/wishList/removeFromWishList/${id}`, {
                                        method: 'DELETE',
                                    })
                                        .then(response => response.json())
                                        .then(data => {
                                            if (data.status) {
                                                const Toast = Swal.mixin({
                                                    toast: true,
                                                    position: "top-end",
                                                    showConfirmButton: false,
                                                    timer: 3000,
                                                    timerProgressBar: true,
                                                    didOpen: (toast) => {
                                                        toast.onmouseenter = Swal.stopTimer;
                                                        toast.onmouseleave = Swal.resumeTimer;
                                                    }
                                                });
                                                Toast.fire({
                                                    title: 'Deleted!',
                                                    text: 'Your item has been removed from the wishlist.',
                                                    icon: 'success',
                                                });

                                                setTimeout(() => {
                                                    location.reload();
                                                }, 3000);
                                            }
                                        })
                                        .catch(error => {
                                            Swal.fire(
                                                'Failed!',
                                                'Failed to remove item from wishlist.',
                                                'error'
                                            );
                                        });
                                }
                            });
                        }




                        function clearCartConfirmation() {
                            Swal.fire({
                                title: 'Are you sure?',
                                text: "You won't be able to revert this!",
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Yes, clear it!'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    fetch('/wishList/clear', {
                                        method: 'DELETE',
                                        headers: {
                                            'Content-Type': 'application/json',
                                        },
                                    })
                                        .then(response => response.json())
                                        .then(data => {
                                            if (data.status) {
                                                Swal.fire(
                                                    {
                                                        title: 'Cleared!',
                                                        text: 'Your wishlist has been cleared.',
                                                        icon: 'success',
                                                        timer: 3000,
                                                        timerProgressBar: true,
                                                        showConfirmButton: false,
                                                    }
                                                );
                                                setTimeout(() => {
                                                    location.reload();
                                                }, 3000);
                                            }
                                        })
                                        .catch(error => {
                                            Swal.fire(
                                                'Failed!',
                                                'Failed to clear the wishlist.',
                                                'error'
                                            );
                                        });
                                }
                            });
                        }

                        function addToCart(productId, name, price) {
                            // Assuming you want to add 1 quantity by default
                            const quantity = 1;

                            fetch('/cart/addToCart/' + productId, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                },
                                body: JSON.stringify({ productId, name, quantity, price }),
                            })
                                .then(response => {
                                    if (response.redirected) {
                                        return Swal.fire({
                                            title: 'Login Required',
                                            text: 'You must be logged in to add items to your cart.',
                                            icon: 'warning',
                                            showCancelButton: true,
                                            confirmButtonText: 'Login',
                                            cancelButtonText: 'Cancel',
                                        }).then((result) => {
                                            if (result.isConfirmed) {
                                                window.location.href = '/login';
                                            } else {
                                                throw new Error('Action cancelled');
                                            }
                                        });
                                    }
                                    return response.json();
                                })

                                .then(data => {
                                    if (data.status) {
                                        // Show a success message using SweetAlert2
                                        const Toast = Swal.mixin({
                                            toast: true,
                                            position: "top-end",
                                            showConfirmButton: false,
                                            timer: 3000,
                                            timerProgressBar: true,
                                            didOpen: (toast) => {
                                                toast.onmouseenter = Swal.stopTimer;
                                                toast.onmouseleave = Swal.resumeTimer;
                                            }
                                        });
                                        Toast.fire({
                                            icon: "success",
                                            title: 'Success!',
                                            text: data.message,
                                        });
                                        setTimeout(() => {
                                            location.reload();
                                        }, 3000);
                                    }
                                })
                                .catch(err => {
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Failed',
                                        text: err.response?.data?.message || "Something went wrong.",
                                    });
                                });
                        }


                    </script>