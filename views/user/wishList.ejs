<%- include('../layouts/header.ejs') %>
<%- include('../layouts/navbar.ejs') %>

<main class="main">
  <div class="page-header breadcrumb-wrap">
      <div class="container">
          <div class="breadcrumb">
              <a href="/" rel="nofollow">Home</a>
              <span></span> Wishlist
          </div>
      </div>
  </div>
  <section class="mt-50 mb-50">
      <div class="container">
          <div class="row">
              <div class="col-12">
                <% if (!req.session.user_id) { %>
                    <!-- Show message to login -->
                    <div class="alert alert-warning" role="alert">
                        Please <a href="/login">login</a> to view your wishlist.
                    </div>
                    <% } else if (wishlist.length===0) { %>
                        <div class="alert alert-info" role="alert">
                            hai buddy Your wishlist is empty. Please add some items to wishlist .
                        </div>
                        <% } else { %>
                  <div class="table-responsive">
                      <table class="table shopping-summery text-center">
                          <thead>
                              <tr class="main-heading">
                                  <th scope="col" colspan="2">Product</th>
                                  <th scope="col">Price</th>
                                  <th scope="col">Stock Status</th>
                                  <th scope="col">Action</th>
                                  <th scope="col">Remove</th>
                              </tr>
                          </thead>
                          <tbody>
                            <% wishlist.forEach(item=> { %>

                              <tr>
                                
                                  <td class="image product-thumbnail"> <img src="/uploads/product/resized/<%=item.productId.productImage[0] %>"
                                    alt="#"></td>
                                  <td class="product-des product-name">
                                      <h5 class="product-name">  <%= item.productId.name %></h5>
                                      <!-- <p class="font-xs">Maboriosam in a tonto nesciung eget<br> distingy magndapibus.
                                      </p> -->
                                  </td>
                                  <td class="price" data-title="Price"><span>â‚¹<%=
                                    item.productId.price%></span></td>
                                  <td class="text-center" data-title="Stock">
                                      <span class="color3 font-weight-bold">In Stock</span>
                                  </td>
                                  <td class="text-right" data-title="Cart">
                                      <button class="btn btn-sm"><i class="fi-rs-shopping-bag mr-5"></i>Add to cart</button>
                                  </td>
                                  <td class="action" data-title="Remove"><a href="#"><i class="fi-rs-trash"></i></a></td>
                              </tr>
                              <% }); %>
                          </tbody>
                      </table>
                  </div>
              </div>
              <% } %>

          </div>
      </div>
  </section>
</main>

<%- include('../layouts/footer.ejs') %>
<%- include('../layouts/preloader.ejs') %>
<%- include('../layouts/script.ejs') %>
