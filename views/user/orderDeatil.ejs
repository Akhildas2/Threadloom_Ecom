                                            data-item-id="<%= selectedItem._id %>">
                                            <i class="fa-solid fa-ban me-2"></i> Cancel Product
                                          </button>
                                          <% } %>
                      </td>
                    </div>
                    <% } %>
          </div>
        </div>

