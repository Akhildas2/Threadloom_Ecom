                                        <!--  add or edit address  -->
                                        <div class="tab-pane fade" id="address" role="tabpanel"
                                            aria-labelledby="address-tab">

                                            <div class="card">
                                                <div
                                                    class="card-header d-flex align-items-center justify-content-between">
                                                    <h5 class="mb-0">Manage Address</h5>
                                                    <a href="#" class="btn btn-sm" data-toggle="modal"
                                                        data-target="#addAddressModal"><i
                                                            class="fas fa-plus me-2"></i>Add Address</a>
                                                </div>
                                                <div class="card-body">
                                                    <% if (address.length===0) { %>
                                                        <div class="text-center">
                                                            <img src="/imgs/pages/No Address.png" alt="No address found"
                                                                class="img-fluid" style="max-width: 300px;">
