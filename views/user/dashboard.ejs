                                                                                            <% if (item.orderStatus === 'delivered') { %>
                                                                                                <p><i class="fas fa-box me-2"></i> <%= new Date(item.deliveryDate).toDateString() %></p>
                                                                                            <% } else if (item.orderStatus === 'cancelled') { %>
                                                                                                <p><i class="fas fa-calendar-times me-2"></i><%= new Date(item.cancellationDate).toDateString() %></p>
                                                                                            <% } else if (item.orderStatus === 'returned') { %>
                                                                                                <p><i class="fas fa-undo me-2"></i>  <%= new Date(item.cancellationDate).toDateString() %></p>
                                                                                            <% } else if (item.orderStatus === 'refunded') { %>
                                                                                                <p><i class="fas fa-money-bill-wave me-2"></i><%= new Date(item.refundDate).toDateString() %></p>
                                                                                            <% } else { %>
                                                                                                <p><i class="fas fa-truck me-2"></i> <%= new Date(order.expectedDelivery).toDateString() %></p>
                                                                                            <% } %>
                                                                                        </span>
                                                                                        
                                                                                            
                                                                                    </div>

                                                                                    <div
                                                                                        class="rating-container mb-3 justify-content-center">
                                                                                        <div class="stars"
                                                                                            data-product-id="<%= item.productId._id %>"
                                                                                            data-order-id="<%= order._id %>">
                                                                                            <% for (let i=1; i <=5; i++)
                                                                                                { %>
                                                                                                <i class="fa-star <%= i <= reviews.rating ? 'fas text-warning' : 'far text-muted' %>"
                                                                                                    data-rating="<%= i %>"></i>
                                                                                                <% } %>
                                                                                        </div>

                                                                                        <small class="text-muted ms-2">
                                                                                            (<span class="rating-value">
                                                                                                <%= reviews.rating %>
                                                                                            </span>/5)
                                                                                        </small>
                                                                                    </div>

                                                                                    <a href="/order/orderDeatil/<%= order._id %>?productId=<%=  item.productId._id %>"
                                                                                        class="btn btn-lg w-100 d-flex align-items-center justify-content-between">
                                                                                        <span>View Details</span>
                                                                                        <i
                                                                                            class="fas fa-chevron-right ms-2 transition-transform"></i>
                                                                                    </a>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <% }); %>
                                                                            <% }); %>
                                                            </div>
                                                            <% } %>
                                                </div>
                                                <!-- Pagination -->
                                                <div class="pagination-area mt-30 mb-50">
                                                    <nav aria-label="Page navigation example">
                                                        <ul class="pagination justify-content-center">
                                                            <% if (orderCurrentPage> 1) { %>
                                                                <li class="page-item">
                                                                    <a class="page-link"
                                                                        href="?orderPage=<%= orderCurrentPage - 1 %>#orders">
                                                                        <span aria-hidden="true">&lt;</span>
                                                                        <!-- Previous Page Symbol -->
                                                                    </a>
                                                                </li>
                                                                <% } %>
                                                                    <% for (let i=1; i <=orderTotalPages; i++) { %>
                                                                        <% if (i===orderCurrentPage) { %>
                                                                            <li class="page-item active">
                                                                                <a class="page-link" href="#orders">
                                                                                    <%= i %>
                                                                                </a>
                                                                            </li>
                                                                            <% } else { %>
                                                                                <li class="page-item">
                                                                                    <a class="page-link"
                                                                                        href="?orderPage=<%= i %>#orders">
                                                                                        <%= i %>
                                                                                    </a>
                                                                                </li>
                                                                                <% } %>
                                                                                    <% } %>
                                                                                        <% if (orderCurrentPage <
                                                                                            orderTotalPages) { %>
                                                                                            <li class="page-item">
                                                                                                <a class="page-link"
                                                                                                    href="?orderPage=<%= orderCurrentPage + 1 %>#orders">
                                                                                                    <span
                                                                                                        aria-hidden="true">&gt;</span>
                                                                                                </a>
                                                                                            </li>
                                                                                            <% } %>
                                                        </ul>
                                                    </nav>
                                                </div>

                                            </div>

                                        </div>

