                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

                <script>
                    function removeFromCart(id) {
                        Swal.fire({
                            title: 'Are you sure?',
                            text: "You won't be able to revert this!",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Yes, delete it!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                fetch(`/cart/removeFromCart/${id}`, {
                                    method: 'DELETE',
                                })
                                    .then(response => response.json())
                                    .then(data => {
                                        if (data.message === 'Cart item removed successfully') {
                                            Swal.fire({
                                                title: 'Deleted!',
                                                text: 'Your item has been removed from the cart.',
                                                icon: 'success',
                                                timer: 3000, // 3 seconds
                                                timerProgressBar: true, // Show a progress bar
                                                showConfirmButton: false,
                                            });
                                            // Optionally, refresh the page or update the cart UI here
                                            location.reload();
                                        } else {
                                            Swal.fire(
                                                'Failed!',
                                                'Failed to remove item from cart.',
                                                'error'
                                            );
                                        }
                                    })
                                    .catch(error => {
                                        console.error('Error:', error);
                                        Swal.fire(
                                            'Failed!',
                                            'Failed to remove item from cart.',
                                            'error'
                                        );
                                    });
                            }
                        });
                    }


                    function clearCartConfirmation() {
                        Swal.fire({
                            title: 'Are you sure?',
                            text: "You won't be able to revert this!",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Yes, clear it!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                fetch('/cart/clear', {
                                    method: 'DELETE',
                                    headers: {
                                        'Content-Type': 'application/json',
                                        // Include any necessary authentication headers here
                                    },
                                })
                                    .then(response => response.json())
                                    .then(data => {
                                        if (data.message === 'Cart cleared successfully') {
                                            Swal.fire(
                                                {
                                                    title: 'Cleared!',
                                                    text: 'Your cart has been cleared.',
                                                    icon: 'success',
                                                    timer: 2000,
                                                    timerProgressBar: true, // Show a progress bar
                                                    showConfirmButton: false,
                                                }
                                            );
                                            // Optionally, refresh the page or update the cart UI here
                                            location.reload();
                                        } else {
                                            Swal.fire(
                                                'Failed!',
                                                'Failed to clear the cart.',
                                                'error'
                                            );
                                        }
                                    })
                                    .catch(error => {
                                        console.error('Error:', error);
                                        Swal.fire(
                                            'Failed!',
                                            'Failed to clear the cart.',
                                            'error'
                                        );
                                    });
                            }
                        });
                    }

                    
                    function incrementQuantity(itemId) {
                        const currentQuantityElement = document.querySelector(`span[data-item-id="${itemId}"]`);
                        if (!currentQuantityElement) {
                            console.error(`Element with data-item-id="${itemId}" not found.`);
                            return;
                        }
                        const currentQuantity = parseInt(currentQuantityElement.textContent);
                        const newQuantity = currentQuantity + 1;
                        updateCartItemQuantity(itemId, newQuantity);
                    }

                    function decrementQuantity(itemId) {
                        const currentQuantityElement = document.querySelector(`span[data-item-id="${itemId}"]`);
                        if (!currentQuantityElement) {
                            console.error(`Element with data-item-id="${itemId}" not found.`);
                            return;
                        }
                        const currentQuantity = parseInt(currentQuantityElement.textContent);
                        const newQuantity = currentQuantity - 1;
                        if (newQuantity > 0) {
                            updateCartItemQuantity(itemId, newQuantity);
                        }
                    }

                    function updateCartItemQuantity(itemId, newQuantity) {
                        fetch(`/cart/updateQuantity/${itemId}`, {
                            method: 'PUT',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ quantity: newQuantity })
                        })
                            .then(response => {
                                if (response.ok) {
                                    return response.json();
                                }
                                throw new Error('Failed to update quantity');
                            })
                            .then(data => {
                                // Optionally, you can handle success here without showing any alert
                                console.log('Quantity updated successfully');
                                // Optionally, refresh the page or update the cart UI here
                                location.reload();
                            })
                            .catch(error => {
                                console.error('Error:', error);
                                // Optionally, you can handle error here without showing any alert
                            });
                    }

                </script>