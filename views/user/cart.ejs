<%- include('../layouts/header.ejs') %>
    <%- include('../layouts/navbar.ejs') %>

        <style>
            .cart-container {
                margin: 40px 0;
                padding: 30px;
                background: #ffffff;
                border-radius: 15px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            }

            .addToCart-img {
                max-width: 80%;
                height: auto;
                transition: transform 0.3s ease;
            }

            .addToCart-img:hover {
                transform: scale(1.05);
            }

            .wishlist-message {
                font-size: 1.8rem;
                font-weight: 600;
                color: #2d2d2d;
                padding: 30px;
                background: #f8f9fa;
                border-radius: 12px;
                border-left: 4px solid #088178;
            }

            .wishlist-message a {
                color: #088178;
                transition: all 0.3s ease;
                position: relative;
            }

            .wishlist-message a:hover {
                padding-left: 8px;
                text-decoration: none;
            }

            .wishlist-message a:hover:after {
                content: 'â†’';
                margin-left: 5px;
            }

            .shopping-summery {
                border-collapse: separate;
                border-spacing: 0 15px;
                background: #fff;
                border-radius: 12px;
                overflow: hidden;
            }

            .shopping-summery thead {
                background: #f8f9fa;
            }

            .shopping-summery th {
                padding: 20px 15px !important;
                border: none !important;
            }

            .shopping-summery td {
                vertical-align: middle;
                padding: 20px !important;
                background: #f8f9fa;
                border: none !important;
            }

            .shopping-summery tr {
                transition: all 0.3s ease;
                border-radius: 8px;
                overflow: hidden;
            }

            .shopping-summery tr:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            }

            .product-thumbnail img {
                width: 80px;
                height: 80px;
                object-fit: cover;
                border-radius: 8px;
                border: 2px solid #e9ecef;
            }

            .detail-qty {
                width: 120px;
                height: 40px;
                background: white;
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 0 10px;
                border-radius: 8px;
            }

            .detail-qty a {
                color: #088178;
                font-size: 18px;
                width: 30px;
                height: 30px;
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: 50%;
                transition: all 0.3s ease;
            }

            .detail-qty a:hover {
                background: #088178;
                color: white;
                text-decoration: none;
            }

            .cart-totals {
                background: #f8f9fa;
                border-radius: 12px;
                box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
            }

            .cart-totals table {
                margin-bottom: 0;
                border-spacing: 0 15px;
            }

            .cart-totals td {
                border: none;
                padding: 15px 0;
            }

            .cart-totals .text-brand {
                color: #088178 !important;
                font-size: 1.2em;
            }

            .btn-checkout {
                background: #088178;
                color: white;
                padding: 15px 40px;
                border-radius: 8px;
                font-weight: 600;
                transition: all 0.3s ease;
                text-transform: uppercase;
                letter-spacing: 1px;
            }

            .btn-checkout:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 123, 255, 0.3);
                color: white;
            }


            .alert-warning {
                background: #fff3cd;
                border-left: 4px solid #ffc107;
                border-radius: 8px;
                padding: 20px;
                margin: 20px 0;
            }

            .action a {
                color: red !important;
                font-size: 1.2rem;
                transition: 0.3s;
            }

            .action a:hover {
                color: darkred !important;
                transform: scale(1.1);
            }

            .text-end a {
                color: #088178 !important;
                font-weight: 600;
                transition: color 0.3s ease-in-out;
            }

            .text-end a:hover {
                color: #066c62 !important;
                text-decoration: underline;
            }

            @media (max-width: 480px) {
                .shopping-summery thead {
                    display: none;
                }

                .shopping-summery tr {
                    display: flex;
                    flex-direction: column;
                    margin-bottom: 20px;
                    padding: 15px;
                }

                .shopping-summery td {
                    display: block;
                    text-align: right !important;
                    padding: 10px !important;
                }

                .shopping-summery td:before {
                    content: attr(data-title);
                    float: left;
                    font-weight: bold;
                    color: #088178;
                }


            }
        </style>

        <main class="main">
            <div class="page-header breadcrumb-wrap">
                <div class="container">
                    <div class="breadcrumb">
                        <a href="/" rel="nofollow">Home</a>

                        <span></span> Your Cart
                    </div>
                </div>
            </div>
            <section class="mt-50 mb-50">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <% if (!req.session.user_id) { %>
                                <!-- Show message to login -->
                                <div class="alert alert-warning" role="alert">
                                    Please <a href="/login">login</a> to view your cart.
                                </div>
                                <% } else if (cartItems.length===0 ) { %>
                                    <div class="container">
                                        <div class="cart-container">
                                            <div class="row align-items-center">
                                                <div
                                                    class="col-lg-6 col-md-6 col-sm-12 d-flex align-items-center justify-content-center">
                                                    <img src="/imgs/pages/Add To Cart page.png" alt="Empty Cart Image"
                                                        class="addToCart-img">
                                                </div>
                                                <div
                                                    class="col-lg-6 col-md-6 col-sm-12 d-flex align-items-center justify-content-center">
                                                    <div class="alert alert-info wishlist-message" role="alert">
                                                        Hai buddy, your cart is empty. Please add some items to continue
                                                        <a href="/shop">shopping</a>.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <% } else { %>
                                        <h3 class="cart-title text-center">
                                            <i class="fas fa-shopping-cart" style="color: #088178;"></i>
                                            My Cart <span class="cart-count">(<%= totalCount %>)</span>
                                            <%= console.log(totalCount) %>
                                        </h3>
                                        <div class="row mt-4">
                                            <div class="col-lg-8 col-md-12">
                                                <div class="table-responsive">
                                                    <table class="table shopping-summery text-center clean">
                                                        <thead>
                                                            <tr class="main-heading">
                                                                <th scope="col">Image</th>
                                                                <th scope="col">Name</th>
                                                                <th scope="col">Price</th>
                                                                <th scope="col">Quantity</th>
                                                                <th scope="col">Subtotal</th>
                                                                <th scope="col">Remove</th>
                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                            <% cartItems.forEach(cartItem=> { %>
                                                                <% cartItem.products.forEach(product=> { %>
                                                                    <tr>
                                                                        <td class="image product-thumbnail">
                                                                            <a
                                                                                href="/productdetails/<%= product.productId._id %>">
                                                                                <img src="/uploads/product/resized/<%=product.productId.productImage[0] %>"
                                                                                    alt="<%= product.name %> photo">
                                                                            </a>
                                                                        </td>
                                                                        <td class="product-des product-name">
                                                                            <h5 class="product-name"> <a
                                                                                    href="/productdetails/<%= product.productId._id %>">
                                                                                    <%= product.name %>
                                                                                </a></h5>
                                                                        </td>
                                                                        <td class="price" data-title="Price"><span>â‚¹<%=
                                                                                    product.price.toFixed(2) %></span>
                                                                        </td>
                                                                        <td class="text-center" data-title="Quantity">
                                                                            <div
                                                                                class="detail-qty border radius m-auto">
                                                                                <a href="#" class="qty-down"
                                                                                    onclick="decrementQuantity('<%= product._id %>')">-</a>
                                                                                <span class="qty-val"
                                                                                    data-item-id="<%= product._id %>">
                                                                                    <%= product.quantity %>
                                                                                </span>
                                                                                <a href="#" class="qty-up"
                                                                                    onclick="incrementQuantity('<%= product._id %>')">+</a>
                                                                            </div>
                                                                        </td>
                                                                        <td class="text-right" data-title="Subtotal">
                                                                            <span>â‚¹<%= product.total.toFixed(2) %>
                                                                            </span>
                                                                        </td>
                                                                        <td class="action" data-title="Remove">
                                                                            <a href="#"
                                                                                onclick="removeFromCart('<%= product._id %>')"
                                                                                class="text-muted"><i
                                                                                    class="fi-rs-trash "></i></a>
                                                                        </td>
                                                                    </tr>
                                                                    <% }); %>
                                                                        <% }); %>

                                                                            <tr>
                                                                                <td colspan="4" class="text-end"
                                                                                    id="totalPriceCell">
                                                                                    <b> Total : â‚¹<%=
                                                                                            totalPrice.toFixed(2) %></b>
                                                                                </td>
                                                                                <td colspan="6" class="text-end">
                                                                                    <a href="#"
                                                                                        onclick="clearCartConfirmation()"
                                                                                        class="text-muted"> <i
                                                                                            class="fi-rs-cross-small"></i>
                                                                                        Clear Cart</a>
                                                                                </td>
                                                                            </tr>
                                                        </tbody>

                                                    </table>
                                                </div>
                                            </div>


                                            <div class="col-lg-4 col-md-12 pt-15">
                                                <div class="border p-md-4 p-30 border-radius cart-totals">
                                                    <div class="heading_s1 mb-3">
                                                        <h4>Cart Totals</h4>
                                                    </div>
                                                    <div class="table-responsive">
                                                        <table class="table">
                                                            <tbody>
                                                                <tr>
                                                                    <td class="cart_total_label">Cart Subtotal</td>
                                                                    <td class="cart_total_amount"><span
                                                                            class="font-lg fw-900 text-brand"><span>â‚¹<%=
                                                                                    totalPrice.toFixed(2)%>
                                                                            </span></span></td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="cart_total_label">Shipping</td>
                                                                    <td class="cart_total_amount"> <i
                                                                            class="ti-gift mr-5"></i>
                                                                        <% if (totalPrice.toFixed(2)<500) { %>
                                                                            <em>â‚¹ 40</em>
                                                                            <% } else { %>
                                                                                <em>Free Shipping</em>
                                                                                <% } %>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td class="cart_total_label">Total</td>
                                                                    <td class="cart_total_amount"><strong><span
                                                                                class="font-xl fw-900 text-brand">
                                                                                <span>â‚¹ <%= (totalPrice + (totalPrice <
                                                                                        500 ? 40 : 0)).toFixed(2) %>
                                                                                </span>
                                                                            </span></strong>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="divider center_icon mt-30 mb-50"><i class="fi-rs-fingerprint"></i>
                                        </div>

                                        <div class="checkout-container">
                                            <div class="row justify-content-center mb-30">
                                                <div class="col-12 text-center">
                                                    <div class="cart-action">
                                                        <a href="/order" class="btn btn-md">
                                                            <i class="fi-rs-shopping-cart-check mr-10"></i> Checkout
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <style>
                                            .checkout-container {
                                                position: sticky;
                                                bottom: 0;
                                                z-index: 100;
                                            }
                                        </style>
                        </div>
                        <% } %>

                    </div>
                </div>
                </div>
                </div>
            </section>
        </main>


        <%- include('../layouts/footer.ejs') %>
            <%- include('../layouts/script.ejs') %>
                <!-- jQuery -->
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
                <!-- Bootstrap JS -->
                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

                <script>
                    function removeFromCart(id) {
                        Swal.fire({
                            title: 'Are you sure?',
                            text: "You won't be able to revert this!",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Yes, delete it!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                fetch(`/cart/removeFromCart/${id}`, {
                                    method: 'DELETE',
                                })
                                    .then(response => response.json())
                                    .then(response => {
                                        if (response.status) {
                                            const Toast = Swal.mixin({
                                                toast: true,
                                                position: "top-end",
                                                showConfirmButton: false,
                                                timer: 3000,
                                                timerProgressBar: true,
                                                didOpen: (toast) => {
                                                    toast.onmouseenter = Swal.stopTimer;
                                                    toast.onmouseleave = Swal.resumeTimer;
                                                }
                                            });
                                            Toast.fire({
                                                title: 'Deleted!',
                                                text: 'Your item has been removed from the cart.',
                                                icon: 'success',
                                            });

                                            setTimeout(() => {
                                                location.reload();
                                            }, 3000);
                                        }
                                    })
                                    .catch(error => {
                                        Swal.fire(
                                            'Failed!',
                                            'Failed to remove item from cart.',
                                            'error'
                                        );
                                    });
                            }
                        });
                    }


                    function clearCartConfirmation() {
                        Swal.fire({
                            title: 'Are you sure?',
                            text: "You won't be able to revert this!",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Yes, clear it!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                fetch('/cart/clear', {
                                    method: 'DELETE',
                                    headers: {
                                        'Content-Type': 'application/json',
                                    },
                                })
                                    .then(response => response.json())
                                    .then(data => {
                                        if (data.status) {
                                            Swal.fire(
                                                {
                                                    title: 'Cleared!',
                                                    text: 'Your cart has been cleared.',
                                                    icon: 'success',
                                                    timer: 3000,
                                                    timerProgressBar: true,
                                                    showConfirmButton: false,
                                                }
                                            );
                                            setTimeout(() => {
                                                location.reload();
                                            }, 3000);
                                        }
                                    })
                                    .catch(error => {
                                        Swal.fire(
                                            'Failed!',
                                            'Failed to clear the cart.',
                                            'error'
                                        );
                                    });
                            }
                        });
                    }

                    function incrementQuantity(itemId) {
                        const currentQuantityElement = document.querySelector(`span[data-item-id="${itemId}"]`);
                        if (!currentQuantityElement) {
                            console.error(`Element with data-item-id="${itemId}" not found.`);
                            return;
                        }
                        const currentQuantity = parseInt(currentQuantityElement.textContent);
                        const newQuantity = currentQuantity + 1;
                        updateCartItemQuantity(itemId, newQuantity, currentQuantityElement);
                    }

                    function decrementQuantity(itemId) {
                        const currentQuantityElement = document.querySelector(`span[data-item-id="${itemId}"]`);
                        if (!currentQuantityElement) {
                            console.error(`Element with data-item-id="${itemId}" not found.`);
                            return;
                        }
                        const currentQuantity = parseInt(currentQuantityElement.textContent);
                        const newQuantity = currentQuantity - 1;
                        if (newQuantity > 0) {
                            updateCartItemQuantity(itemId, newQuantity, currentQuantityElement);
                        }
                    }

                    function updateCartItemQuantity(itemId, newQuantity, quantityElement) {
                        const subtotalElement = quantityElement.closest('tr').querySelector('.text-right');
                        if (!subtotalElement) {
                            console.error(`Subtotal element for itemId="${itemId}" not found.`);
                            return;
                        }

                        fetch(`/cart/updateQuantity/${itemId}`, {
                            method: 'PUT',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ quantity: newQuantity })
                        })
                            .then(response => {
                                if (response.ok) {
                                    return response.json();
                                }
                                throw new Error('Requested quantity exceeds available stock');
                            })
                            .then(data => {
                                // Update the quantity display
                                quantityElement.textContent = newQuantity;
                                // Update the subtotal display
                                const priceElement = quantityElement.closest('tr').querySelector('.price span');
                                const price = parseFloat(priceElement.textContent.replace('â‚¹', ''));
                                const newSubtotal = price * newQuantity;
                                subtotalElement.textContent = `â‚¹${newSubtotal.toFixed(2)}`;

                                // Update the cart subtotal and total
                                updateCartTotals(newSubtotal);
                            })
                            .catch(error => {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Failed!',
                                    text: error.message || "Something went wrong."
                                })
                                setTimeout(() => {
                                    location.reload()
                                }, 1500);
                            });
                    }

                    function updateCartTotals() {
                        // Get all the rows containing cart items
                        const cartRows = document.querySelectorAll('.shopping-summery tbody tr');
                        let totalPrice = 0;

                        // Loop through each cart item row
                        cartRows.forEach(row => {
                            const priceElement = row.querySelector('.price span');
                            const quantityElement = row.querySelector('.qty-val');
                            const subtotalElement = row.querySelector('.text-right');

                            if (priceElement && quantityElement && subtotalElement) {
                                // Extract price and quantity values
                                const price = parseFloat(priceElement.textContent.replace('â‚¹', ''));
                                const quantity = parseInt(quantityElement.textContent);
                                const subtotal = price * quantity;

                                // Update the subtotal display
                                subtotalElement.textContent = `â‚¹${subtotal.toFixed(2)}`;

                                // Add subtotal to total price
                                totalPrice += subtotal;
                            }
                        });
                        // Calculate the shipping charges
                        let shippingCharges = 0;
                        if (totalPrice < 500) {
                            shippingCharges = 40;
                        }
                        // Update the cart subtotal and total
                        const cartSubtotalElement = document.querySelector('.cart_total_amount span');
                        const cartTotalElement = document.querySelector('.cart_total_amount strong span');

                        if (cartSubtotalElement && cartTotalElement) {
                            cartSubtotalElement.textContent = `â‚¹${totalPrice.toFixed(2)}`;
                            cartTotalElement.textContent = `â‚¹${totalPrice.toFixed(2)}`;
                        }
                        const shippingElement = document.querySelector('.cart_total_label + .cart_total_amount em');
                        if (shippingElement) {
                            shippingElement.textContent = shippingCharges ? `â‚¹ ${shippingCharges}` : 'Free Shipping';
                        }
                        const totalPriceElement = document.getElementById('totalPriceCell');
                        if (totalPriceElement) {
                            totalPriceElement.innerHTML = `<b>Total: â‚¹${totalPrice.toFixed(2)}</b>`;
                        }
                    }





                </script>