<%- include('../layouts/header.ejs') %>
    <%- include('../layouts/navbar.ejs') %>
        <%- include('../layouts/quickView.ejs') %>
            <style>
                /* Enhanced Interactive Styles */
                .card-hover {
                    transition: transform 0.2s ease, box-shadow 0.2s ease;
                    cursor: default;
                    border: 1px solid rgba(0, 0, 0, 0.05);
                }

                .card-hover:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
                }

                .avatar-hover {
                    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
                    will-change: transform;
                }

                .avatar-hover:hover {
                    transform: scale(1.15) rotate(8deg);
                    box-shadow: 0 6px 12px rgba(8, 129, 120, 0.2);
                }

                .online-indicator {
                    position: absolute;
                    bottom: 2px;
                    right: 2px;
                    width: 12px;
                    height: 12px;
                    border: 2px solid white;
                }

                .rating-badge {
                    background: rgba(255, 193, 7, 0.15);
                    border: 1px solid rgba(255, 193, 7, 0.2);
                }

                .btn-like,
                .btn-edit {
                    padding: 8px 16px;
                    border-radius: 8px;
                    border: none;
                    background: rgba(8, 129, 120, 0.05);
                    transition: all 0.2s ease;
                }

                .btn-like:hover,
                .btn-edit:hover {
                    background: rgba(8, 129, 120, 0.1);
                    transform: translateY(-1px);
                }

                .btn-like.active {
                    background: #088178;
                    color: white;
                }

                .btn-like.active i {
                    color: white !important;
                }

                .transition-all {
                    transition: all 0.2s ease;
                }

                .verified-badge {
                    font-size: 0.8em;
                    vertical-align: middle;
                }

                .btn-share:hover {
                    color: #088178 !important;
                    transform: rotate(15deg);
                }
            </style>

            <section class="mt-50 mb-50">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="product-detail accordion-detail">
                                <div class="row mb-50">
                                    <div class="page-header breadcrumb-wrap">
                                        <div class="container">
                                            <div class="breadcrumb">
                                                <a href="/" rel="nofollow">Home</a>
                                                <span></span>
                                                <%= product.category.categoryName %>
                                                    <span></span>
                                                    <%= product.name %>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-sm-12 col-xs-12">
                                        <div class="detail-gallery">
                                            <span class="zoom-icon"><i class="fi-rs-search"></i></span>
                                            <!-- MAIN SLIDES -->
                                            <div class="product-image-slider">
                                                <% for (var i=0; i < product.productImage.length; i++) { %>
                                                    <figure class="border-radius-10">
                                                        <img src="/uploads/product/resized/<%= product.productImage[i] %>"
                                                            alt="<%= product.name %>">
                                                    </figure>
                                                    <% } %>
                                            </div>
                                            <!-- THUMBNAILS -->
                                            <div class="slider-nav-thumbnails">
                                                <% for (var i=0; i < product.productImage.length; i++) { %>
                                                    <div class="thumbnail">
                                                        <img src="/uploads/product/resized/<%= product.productImage[i] %>"
                                                            alt="<%= product.name %>"
                                                            style="width: 100px; height: 100px;">
                                                    </div>
                                                    <% } %>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-md-6 col-sm-12 col-xs-12">
                                        <div class="detail-info">
                                            <h2 class="title-detail text-center" style="margin-top: 20px;">
                                                <%= product.name %>
                                            </h2>
                                            <div class="product-detail-rating">
                                                <div class="pro-details-brand">
                                                    <span><i class="fa-solid fa-list" style="margin-right: 5px;"></i>
                                                        <%= product.category.categoryName %>
                                                    </span>
                                                </div>

                                                <div class="product-rate-cover text-end">
                                                    <strong>
                                                        <span class="font-small m-2" <% if (product.avgRating>= 3) { %>
                                                            style="background-color: #4CAF50; color: white; padding:
                                                            3px 6px; border-radius: 4px;"
                                                            <% } else { %>
                                                                style="background-color: #F44336; color: white;
                                                                padding: 3px 6px; border-radius: 4px;"
                                                                <% } %>>
                                                                    <%= product.avgRating.toFixed(1) %> ★
                                                        </span>
                                                    </strong>|
                                                    <span class="font-small m-2 text-muted">
                                                        <%= product.totalRatings %> Ratings
                                                    </span> |
                                                    <span class="font-small m-2 text-muted">
                                                        <%=product.totalReviews %> Reviews
                                                    </span>
                                                </div>

                                            </div>
                                            <div class="product-detail-rating">
                                                <span><i class="fa-solid fa-tags" style="margin-right: 5px;"></i>
                                                    <%= product.brand %>
                                                </span>
                                                <span><i class="fa-solid fa-venus-mars" style="margin-right: 5px;"></i>
                                                    <%= product.gender %>
                                                </span>
                                            </div>

                                            <div class="clearfix product-price-cover">
                                                <div class="product-price primary-color float-left">
                                                    <div class="product-card__price d-flex">
                                                        <% let discountedPrice=product.price; %>
                                                            <% let hasDiscount=false; %>
                                                                <% let discountPercentage=0; %>

                                                                    <% const currentDate=new Date(); %>

                                                                        <% if (product.offer && currentDate <=new
                                                                            Date(product.offer.endingDate)) { %>
                                                                            <% discountPercentage=product.offer.discount;
                                                                                %>
                                                                                <% hasDiscount=true; %>
                                                                                    <% } %>

                                                                                        <% if (product.category.offer &&
                                                                                            currentDate <=new
                                                                                            Date(product.category.offer.endingDate))
                                                                                            { %>
                                                                                            <% if
                                                                                                (product.category.offer.discount>
                                                                                                discountPercentage) { %>
                                                                                                <% discountPercentage=product.category.offer.discount;
                                                                                                    %>
                                                                                                    <% hasDiscount=true;
                                                                                                        %>
                                                                                                        <% } %>
                                                                                                            <% } %>

                                                                                                                <% if
                                                                                                                    (hasDiscount)
                                                                                                                    { %>
                                                                                                                    <% discountedPrice
                                                                                                                        -=discountedPrice
                                                                                                                        *
                                                                                                                        (discountPercentage
                                                                                                                        /
                                                                                                                        100);
                                                                                                                        %>
                                                                                                                        <span
                                                                                                                            class="product-card__price d-flex">
                                                                                                                            <ins><del>₹
                                                                                                                                    <%= product.price.toFixed(2)
                                                                                                                                        %>
                                                                                                                                </del></ins>
                                                                                                                            <ins
                                                                                                                                style="margin-left: 20px;">
                                                                                                                                <span
                                                                                                                                    class="discounted-price"
                                                                                                                                    style="color: green;">₹
                                                                                                                                    <%= discountedPrice.toFixed(2)
                                                                                                                                        %>
                                                                                                                                </span>
                                                                                                                            </ins>
                                                                                                                            <ins
                                                                                                                                style="margin-left: 20px;">
                                                                                                                                <span
                                                                                                                                    class="discount-percentage"
                                                                                                                                    style="color: red;">(
                                                                                                                                    <%= discountPercentage
                                                                                                                                        %>
                                                                                                                                        %
                                                                                                                                        off)
                                                                                                                                </span>
                                                                                                                            </ins>
                                                                                                                        </span>
                                                                                                                        <% } else
                                                                                                                            {
                                                                                                                            %>
                                                                                                                            <ins><span
                                                                                                                                    style="color: green;">₹
                                                                                                                                    <%= product.price.toFixed(2)
                                                                                                                                        %>
                                                                                                                                </span></ins>
                                                                                                                            <% }
                                                                                                                                %>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="product_sort_info font-xs mb-30">
                                                <ul>
                                                    <!-- <li class="mb-10"><i class="fi-rs-crown mr-5"></i> 1 Year AL Jazeera
                                                    Brand Warranty</li> -->
                                                    <li class="mb-10"><i class="fi-rs-refresh mr-5"></i> 14 Day Return
                                                        Policy</li>
                                                    <li><i class="fi-rs-credit-card mr-5"></i> Cash on Delivery
                                                        available
                                                    </li>
                                                </ul>
                                            </div>



                                            <!-- Offers Section -->
                                            <div class="product_sort_info font-xs mb-30 p-3 rounded">
                                                <h4 class="mb-3 text-dark">
                                                    <span>Available Offers</span>
                                                </h4>
                                                <ul class="pl-3">
                                                    <% const allOffers=[]; if (product.offer) allOffers.push({
                                                        type: 'product' , data: product.offer }); if
                                                        (product.category?.offer) allOffers.push({ type: 'category' ,
                                                        data: product.category.offer });
                                                        availableCoupons.forEach(coupon=> allOffers.push({ type:
                                                        'coupon', data: coupon }));
                                                        %>

                                                        <% allOffers.forEach((offer, index)=> { %>
                                                            <li class="mb-2 <%= index >= 3 ? 'more-offer' : '' %>" <%
                                                                if(index>= 3) { %>style="display: none;"<% } %>>

                                                                    <% if (offer.type==='product' ) { %>
                                                                        <span
                                                                            class="badge bg-warning text-dark px-2 py-1">Special
                                                                            Price</span>
                                                                        <span class="ml-2 text-dark">Get extra <strong>
                                                                                <%= offer.data.discount %>%
                                                                            </strong> off!</span>
                                                                        <small class="text-muted"> (Valid till <%= new
                                                                                Date(offer.data.endingDate).toLocaleDateString('en-IN',
                                                                                { day: 'numeric' , month: 'short' ,
                                                                                year: 'numeric' }) %>)</small>
                                                                        <a href="#" class="text-primary ml-1">T&C</a>
                                                                        <% } else if (offer.type==='category' ) { %>
                                                                            <span
                                                                                class="badge bg-danger text-white px-2 py-1">Category
                                                                                Offer</span>
                                                                            <span class="ml-2 text-dark">Get <strong>
                                                                                    <%= offer.data.discount %>%
                                                                                </strong> off on all <strong>
                                                                                    <%= product.category.name %>
                                                                                </strong> products!</span>
                                                                            <small class="text-muted"> (Valid till <%=
                                                                                    new
                                                                                    Date(offer.data.endingDate).toLocaleDateString('en-IN',
                                                                                    { day: 'numeric' , month: 'short' ,
                                                                                    year: 'numeric' }) %>)</small>
                                                                            <a href="#"
                                                                                class="text-primary ml-1">T&C</a>
                                                                            <% } else if (offer.type==='coupon' ) { %>
                                                                                <span
                                                                                    class="badge bg-info text-white px-2 py-1">Coupon</span>
                                                                                <span class="ml-2 text-dark">Use code
                                                                                    <strong>
                                                                                        <%= offer.data.couponCode %>
                                                                                    </strong> to get ₹<%=
                                                                                        offer.data.discountAmount %> off
                                                                                        on orders above ₹<%=
                                                                                            offer.data.criteriaAmount %>
                                                                                            !</span>
                                                                                <a href="#"
                                                                                    class="text-primary ml-1">T&C</a>
                                                                                <% } %>
                                                            </li>
                                                            <% }) %>

                                                                <% if (allOffers.length> 3) { %>
                                                                    <li>
                                                                        <a href="javascript:void(0);"
                                                                            onclick="toggleMoreOffers()" id="moreLink"
                                                                            data-count="<%= allOffers.length - 3 %>"
                                                                            class="text-primary">
                                                                            +<%= allOffers.length - 3 %> more offers
                                                                        </a>
                                                                    </li>
                                                                    <% } %>
                                                </ul>
                                            </div>


                                            <div class="attr-detail attr-size">
                                                <strong class="mr-10">Size</strong>
                                                <ul class="list-filter size-filter font-small">
                                                    <li class="active"><a href="#">
                                                            <%= product.size %>
                                                        </a></li>
                                                </ul>
                                            </div>
                                            <div class="bt-1 border-color-1 mt-30 mb-30">
                                                <% if (product.stockCount> 0) { %>
                                                    <div class="detail-extralink">
                                                        <div class="detail-qty border radius">
                                                            <a href="#" class="qty-down"><i
                                                                    class="fi-rs-angle-small-down"></i></a>
                                                            <span class="qty-val">1</span>
                                                            <a href="#" class="qty-up"><i
                                                                    class="fi-rs-angle-small-up"></i></a>
                                                        </div>
                                                        <div class="product-extra-link2">
                                                            <form id="addToCartForm"
                                                                action="/cart/addToCart/<%= product._id %>"
                                                                method="post">
                                                                <input type="hidden" name="quantity" value="1">
                                                                <button type="submit"
                                                                    class="button button-add-to-cart">Add
                                                                    to cart</button>
                                                                <% if (userWishlist.includes(product._id.toString())) {
                                                                    %>
                                                                    <a aria-label="Add To Wishlist" class="action-btn"
                                                                        style="background-color: red;"
                                                                        onclick="addToWishList('<%= product._id %>')">
                                                                        <i class="fi-rs-heart"></i>
                                                                    </a>
                                                                    <% } else { %>
                                                                        <a aria-label="Add To Wishlist"
                                                                            class="action-btn hover-up"
                                                                            onclick="addToWishList('<%= product._id %>')">
                                                                            <i class="fi-rs-heart"></i>
                                                                        </a>
                                                                        <% } %>


                                                                            <!-- <a aria-label="Compare"
                                                                                class="action-btn hover-up" href="#"><i
                                                                                    class="fi-rs-shuffle"></i></a> -->
                                                            </form>
                                                        </div>
                                                    </div>
                                                    <% } else { %>
                                                        <div class="product-extra-link2">
                                                            <button class="button sold-out">Sold Out</button>
                                                            <a aria-label="Add To Wishlist"
                                                                class="action-btn hover-up wishlist"
                                                                onclick="addToWishList('<%= product._id %>')"><i
                                                                    class="fi-rs-heart"></i></a>
                                                        </div>
                                                        <% } %>
                                            </div>



                                        </div>
                                    </div>

                                </div>
                                <!-- Detail Info -->
                            </div>
                        </div>
                        <!---for navbar-->
                        <section>




                            <div class="row">
                                <div class="col-lg-10 m-auto entry-main-content ">

                                    <div onmouseover="toggleSection('descriptions')">
                                        <h2 class="section-title style-1 mb-30 ">Descriptions</h2>

                                        <div class="section-content descriptions active">
                                            <div class="bt-1 border-color-1 mt-15 mb-15">
                                                <div class="short-desc mb-30">
                                                    <p>
                                                        <%= product.description %>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div onmouseover="toggleSection('additional-info')">
                                        <h3 class="section-title style-1 mb-30 mt-30">Additional info</h3>

                                        <div class="section-content additional-info">
                                            <table class="table">
                                                <tbody>
                                                    <tr>
                                                        <th>Name</th>
                                                        <td>
                                                            <%= product.name %>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>Brand</th>
                                                        <td>
                                                            <%= product.brand %>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>Fit</th>
                                                        <td>
                                                            <%= product.fit %>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>Fabric</th>
                                                        <td>
                                                            <%= product.fabric %>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>Sleeve</th>
                                                        <td>
                                                            <%= product.sleeve %>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>Pattern</th>
                                                        <td>
                                                            <%= product.pattern %>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>Color</th>
                                                        <td>
                                                            <%= product.color %>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>Fabric Care</th>
                                                        <td>
                                                            <%= product.fabricCare %>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>origin</th>
                                                        <td>
                                                            <%= product.origin %>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>

                                    <div onmouseover="toggleSection('reviews')">
                                        <h3 class="section-title style-1">
                                            Product Rating & Reviews
                                          </h3>

                                        <div class="section-content reviews">
                                            <div class="rating-summary mt-4 text-center">
                                                <div class="mb-2 fs-3">
                                                  <span class="fw-bold">
                                                    Average Rating:
                                                  </span>
                                                  <span class="font-small m-2" <% if (product.avgRating>= 3) { %>
                                                    style="background-color: #4CAF50; color: white; padding:
                                                    3px 6px; border-radius: 4px;"
                                                    <% } else { %>
                                                        style="background-color: #F44336; color: white;
                                                        padding: 3px 6px; border-radius: 4px;"
                                                        <% } %>>
                                                            <%= product.avgRating.toFixed(1) %> ★
                                                </span>
                                                </div>
                                                <div class="d-flex justify-content-center gap-4 text-muted mt-3 fs-5">
                                                  <span class="fw-bold total-ratings">
                                                    Ratings: <%= product.totalRatings %>
                                                  </span>
                                                  <span class="fw-bold total-reviews">
                                                    Reviews: <%= product.totalReviews %>
                                                  </span>
                                                </div>
                                              </div>
                                              
                                            <div class="text-end">
                                                <% if (hasPurchased && !hasReviewed) { %>
                                                    <button class="btn btn-fill-out btn-sm hover-up rounded-pill"
                                                        onclick="toggleReviewForm()">
                                                        Add Review <i class="fas fa-plus-circle"></i>
                                                    </button>
                                                    <% } else if (hasReviewed) { %>
                                                        <p class="text-success">You have already reviewed this product.
                                                        </p>
                                                        <% } %>
                                            </div>
                                            <% if (hasPurchased && !hasReviewed) { %>
                                                <div id="reviewForm" class="card mt-20 mb-20 p-4 shadow-sm rounded-lg"
                                                    style="border: 1px solid #e0e0e0;">
                                                    <h4 class="mb-3">Write a Review</h4>
                                                    <form id="reviewFormSubmit" onsubmit="submitReview(event)">
                                                        <input type="hidden" name="productId"
                                                            value="<%= product._id %>">
                                                        <div class="form-group mb-3">
                                                            <label class="form-label">Comment:</label>
                                                            <textarea name="comment" rows="3" class="form-control"
                                                                placeholder="Write your experience..."></textarea>
                                                            <span id="commentError"
                                                                style="color: red; font-size: 14px;"></span>
                                                        </div>
                                                        <div class="text-center">
                                                            <button type="submit"
                                                                class="btn btn-sm w-50 rounded-pill">Submit
                                                                Review</button>
                                                        </div>
                                                    </form>
                                                </div>
                                                <% } %>

                                                    <div class="p-4" id="reviewList">

                                                        <% if (reviews.length> 0) { %>
                                                            <% reviews.forEach(review=> { %>
                                                                <div
                                                                    class="review-item card-hover bg-white rounded-4 p-4 mb-3 border-0 shadow-sm">
                                                                    <div class="d-flex align-items-center mb-3">
                                                                   
                                                                        <div class="avatar-hover position-relative text-white rounded-circle d-flex justify-content-center align-items-center me-3"
                                                                            style="width: 48px; height: 48px; background: linear-gradient(135deg, #088178, #0caa9f); transition: all 0.3s ease;">
                                                                            <span class="avatar-initial fs-5 fw-bold">
                                                                                <%= review.userId.name.charAt(0).toUpperCase()
                                                                                    %>
                                                                            </span>
                                                                            <div
                                                                                class="online-indicator bg-success rounded-circle">
                                                                            </div>
                                                                        </div>

                                                                        <!-- User Info -->
                                                                        <div class="flex-grow-1">
                                                                            <div
                                                                                class="d-flex align-items-center justify-content-between mb-1">
                                                                                <div>
                                                                                    <h5
                                                                                        class="d-block text-dark mb-0 fw-semibold">
                                                                                        <%= review.userId.name %>
                                                                                            <span
                                                                                                class="verified-badge ms-1"><i
                                                                                                    class="fas fa-check-circle text-primary"></i></span>
                                                                                    </h5>
                                                                                </div>
                                                                                <% if (review.avgRating> 0 ) { %>
                                                                                    <div
                                                                                        class="rating-badge small px-3 py-2 rounded-pill bg-light">
                                                                                        <% for(let i=0; i < 5; i++) { %>
                                                                                            <i
                                                                                                class="fas fa-star <%= i < review.avgRating ? 'text-warning' : 'text-muted opacity-50' %> fs-6"></i>
                                                                                            <% } %>
                                                                                    </div>
                                                                                    <% } %>
                                                                            </div>
                                                                            <small class="text-muted"
                                                                                data-timestamp="<%= review.createdAt %>"></small>
                                                                        </div>
                                                                    </div>

                                                                    <div class="review-content ms-2">
                                                                        <% const comment=review.comment?.trim(); %>
                                                                            <% if (comment) { %>
                                                                                <p class="mb-3 text-dark fs-5"
                                                                                    style="line-height: 1.6;">
                                                                                    “<%= comment %>”
                                                                                </p>
                                                                                <% } %>

                                                                                    <div
                                                                                        class="d-flex align-items-center justify-content-between">
                                                                                        <div
                                                                                            class="d-flex align-items-center gap-3">
                                                                                            <button
                                                                                                class="btn-like d-flex align-items-center gap-2"
                                                                                                data-review-id="<%= review._id %>"
                                                                                                aria-label="Like this review">
                                                                                                <i
                                                                                                    class="far fa-thumbs-up fs-5 transition-all <%= review.likes.includes(req.session.user_id) ? 'text-success' : '' %>"></i>
                                                                                                <span
                                                                                                    class="count fw-semibold">
                                                                                                    <%= (review.likes && Array.isArray(review.likes)) ? review.likes.length : 0 %>
                                                                                                </span>
                                                                                            </button>

                                                                                            <% if
                                                                                                (req.session.user_id===review.userId._id.toString()
                                                                                                && comment) { %>
                                                                                                <button
                                                                                                    class="btn-edit d-flex align-items-center gap-2"
                                                                                                    aria-label="Edit this review"
                                                                                                    onclick="editReview('<%= review._id %>',`<%= review.comment %>`)">
                                                                                                    <span
                                                                                                        class="fw-semibold">
                                                                                                        <i
                                                                                                            class="fas fa-edit me-2"></i>
                                                                                                        Edit
                                                                                                    </span>
                                                                                                </button>
                                                                                                <% } %>
                                                                                        </div>

                                                                                    </div>

                                                                                    <!-- Hidden Edit Review Form -->
                                                                                    <div id="editReviewForm_<%= review._id %>"
                                                                                        class="mt-3 p-2 d-none">
                                                                                        <div
                                                                                            class="card p-3 shadow-sm border rounded">
                                                                                            <h6
                                                                                                class="fw-bold text-secondary mb-2">
                                                                                                Edit Your Review</h6>
                                                                                            <textarea
                                                                                                id="editComment_<%= review._id %>"
                                                                                                class="form-control mb-2"
                                                                                                rows="5"><%= review.comment %></textarea>
                                                                                            <span
                                                                                                id="editCommentError_<%= review._id %>"
                                                                                                class="text-danger small"></span>

                                                                                            <div
                                                                                                class="d-flex justify-content-end mt-2 gap-2">
