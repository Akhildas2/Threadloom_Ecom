                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ reviewId })
                            })
                                .then(response => response.json())
                                .then(data => {
                                    countElement.textContent = data.likes;
                                    this.classList.toggle('active', data.liked);
                                    icon.classList.toggle('fa-solid', data.liked);
                                })
                                .catch(error => {
                                    // Show error feedback
                                    this.style.backgroundColor = '#ffe6e6';
                                    setTimeout(() => this.style.backgroundColor = '', 1000);
                                })
                                .finally(() => {
                                    setTimeout(() => this.classList.remove('active'), 200);
                                });
                        });
                    });

                    // Hover effects
                    document.querySelectorAll('.btn-like, .btn-edit, .btn-share').forEach(btn => {
                        btn.addEventListener('mouseenter', () => {
                            btn.style.transform = 'scale(1.05)';
                        });
                        btn.addEventListener('mouseleave', () => {
                            btn.style.transform = '';
                        });
                    });
                });


                function editReview(reviewId, comment) {
                    document.getElementById(`editReviewForm_${reviewId}`).classList.remove("d-none");
                    document.getElementById(`editComment_${reviewId}`).value = comment;
                }

                async function submitEditReview(reviewId) {
                    const updatedComment = document.getElementById(`editComment_${reviewId}`).value.trim();
                    const errorElement = document.getElementById(`editCommentError_${reviewId}`);

                    // Clear previous error messages
                    errorElement.textContent = '';

                    if (updatedComment === '') {
                        errorElement.textContent = 'Please enter a comment.';
                        return;
                    }
                    if (updatedComment.length > 200) {
                        errorElement.textContent = 'Comment should not exceed 200 characters.';
                        return;
                    }

                    try {
                        const response = await fetch(`/review/edit-review/${reviewId}`, {
                            method: "PUT",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ comment: updatedComment })
                        });

                        const data = await response.json();
                        if (data.success) {
                            location.reload(); // Reload to reflect the updated comment
                        } else {
                            errorElement.textContent = data.message || "Failed to update review.";
                        }
                    } catch (error) {
                        errorElement.textContent = "An error occurred while updating the review.";
                    }
                }

                function cancelEditReview(reviewId) {
                    document.getElementById(`editReviewForm_${reviewId}`).classList.add("d-none");
                }
            </script>
