<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchBoxes = document.querySelectorAll('.search-box');

        searchBoxes.forEach(searchBox => {
            const form = searchBox.closest('form');
            const suggestionsList = form.querySelector('.suggestions-list');
            const categorySelect = form.querySelector('select[name="category"]');

            searchBox.addEventListener('input', function () {
                const query = this.value.trim();
                const selectedCategory = categorySelect ? categorySelect.value : '';

                if (query.length < 2) {
                    suggestionsList.innerHTML = '';
                    suggestionsList.style.display = 'none';
                    return;
                }

                fetch(`/search-suggestions?q=${encodeURIComponent(query)}&category=${encodeURIComponent(selectedCategory)}`)
                    .then(response => response.json())
                    .then(data => {
                        suggestionsList.innerHTML = '';
                        if (data.length > 0) {
                            data.forEach(item => {
                                const li = document.createElement('li');
                                li.textContent = item.value;
                                li.dataset.type = item.type;

                                const typeSpan = document.createElement('span');
                                typeSpan.textContent = item.type === 'category' ? '📁 ' : '🛍️ ';
                                li.prepend(typeSpan);

                                li.onclick = function () {
                                    const params = new URLSearchParams();

                                    if (item.type === 'category') {
                                        params.set('category', item.value);
                                        const currentQuery = searchBox.value.trim();
                                        if (currentQuery) params.set('query', currentQuery);
                                        if (categorySelect) categorySelect.value = item.value;
                                    } else {
                                        params.set('query', item.value);
                                        if (categorySelect?.value) params.set('category', categorySelect.value);
                                        searchBox.value = item.value;
                                    }

                                    window.location.href = `${form.action}?${params.toString()}`;
                                };

                                suggestionsList.appendChild(li);
                            });
                            suggestionsList.style.display = 'block';
                        } else {
                            suggestionsList.style.display = 'none';
                        }
                    });
            });

            document.addEventListener('click', function (e) {
                if (!searchBox.contains(e.target) && !suggestionsList.contains(e.target)) {
                    suggestionsList.style.display = 'none';
                }
            });
        });
    });

    document.addEventListener("DOMContentLoaded", function () {
        const currentPath = window.location.pathname;
        const navLinks = document.querySelectorAll(".nav-link");

        navLinks.forEach(link => {
            if (link.getAttribute("href") === currentPath) {
                link.classList.add("active");
            }
        });
    });
</script>